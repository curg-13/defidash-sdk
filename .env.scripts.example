# DefiDash SDK - Scripts Environment Variables
# Copy this to .env.scripts and fill in your values
# Used by scripts in scripts/ folder (suilend, navi, scallop, 7k)

# ============================================================================
# Required
# ============================================================================

# Sui wallet secret key (base64 encoded)
SECRET_KEY=YOUR_SECRET_KEY_HERE

# ============================================================================
# Network
# ============================================================================

# Sui RPC URL (defaults to mainnet)
SUI_FULLNODE_URL=https://fullnode.mainnet.sui.io:443

# ============================================================================
# Leverage Strategy Settings
# ============================================================================

# Coin type for deposit (full address or symbol like LBTC, SUI, ETH)
LEVERAGE_DEPOSIT_COIN_TYPE=0x3e8e9423d80e1774a7ca128fccd8bf5f1f7753be658c5e645929037f7c819040::lbtc::LBTC

# Amount to deposit (raw units, e.g., 1000 = 0.00001 LBTC for 8 decimals)
LEVERAGE_DEPOSIT_AMOUNT=1000

# Leverage multiplier (e.g., 1.5, 2.0, 3.0)
LEVERAGE_MULTIPLIER=2

# ============================================================================
# Basic Deposit/Withdraw/Borrow/Repay Scripts (suilend)
# ============================================================================

# Deposit settings
DEPOSIT_COIN_TYPE=0x3e8e9423d80e1774a7ca128fccd8bf5f1f7753be658c5e645929037f7c819040::lbtc::LBTC
DEPOSIT_AMOUNT=1000

# Withdraw settings
WITHDRAW_COIN_TYPE=0x3e8e9423d80e1774a7ca128fccd8bf5f1f7753be658c5e645929037f7c819040::lbtc::LBTC
WITHDRAW_AMOUNT=1000

# Borrow settings
BORROW_COIN_TYPE=0xdba34672e30cb065b1f93e3ab55318768fd6fef66c15942c9f7cb846e2f900e7::usdc::USDC
BORROW_AMOUNT=100000

# Repay settings
REPAY_COIN_TYPE=0xdba34672e30cb065b1f93e3ab55318768fd6fef66c15942c9f7cb846e2f900e7::usdc::USDC

# ============================================================================
# Swap Settings (for 7k scripts)
# ============================================================================

SWAP_INPUT_COIN_TYPE=0xdba34672e30cb065b1f93e3ab55318768fd6fef66c15942c9f7cb846e2f900e7::usdc::USDC
SWAP_OUTPUT_COIN_TYPE=0x3e8e9423d80e1774a7ca128fccd8bf5f1f7753be658c5e645929037f7c819040::lbtc::LBTC
SWAP_AMOUNT=500000

# ============================================================================
# Flash Loan Settings (for scallop scripts)
# ============================================================================

FLASH_LOAN_AMOUNT=1000000
FLASH_LOAN_COIN_TYPE=usdc
