# DefiDash SDK - Scripts Environment Variables
# Copy this to .env.scripts and fill in your values
# Used by scripts in scripts/ folder (suilend, navi, scallop, 7k)

# ============================================================================
# Required
# ============================================================================

# Sui wallet secret key (base64 encoded)
SECRET_KEY=YOUR_SECRET_KEY_HERE

# ============================================================================
# Network
# ============================================================================

# Sui RPC URL (defaults to mainnet)
SUI_FULLNODE_URL=https://fullnode.mainnet.sui.io:443

# ============================================================================
# Leverage Strategy Settings (for protocol-specific scripts)
# ============================================================================

# Coin type for deposit (full address)
LEVERAGE_DEPOSIT_COIN_TYPE=0x3e8e9423d80e1774a7ca128fccd8bf5f1f7753be658c5e645929037f7c819040::lbtc::LBTC

# Amount to deposit (raw units)
LEVERAGE_DEPOSIT_AMOUNT=1000

# Leverage multiplier
MULTIPLIER=2

# ============================================================================
# Swap Settings (for 7k scripts)
# ============================================================================

SWAP_COIN_TYPE_IN=0x2::sui::SUI
SWAP_COIN_TYPE_OUT=0xdba34672e30cb065b1f93e3ab55318768fd6fef66c15942c9f7cb846e2f900e7::usdc::USDC
SWAP_AMOUNT=1000000000

# ============================================================================
# Flash Loan Settings (for scallop scripts)
# ============================================================================

FLASH_LOAN_AMOUNT=1000000
FLASH_LOAN_COIN=usdc
